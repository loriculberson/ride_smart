<%= form_for(@bike_event, url: bike_events_path, method: :post, role:"form") do |f| %>

  <%= render "partials/bike_events_errors" %>
  <%= render partial: "bike_events/incident_types", locals: { f: f} %>

   <div>
    <%= f.label :incident_date %>
    <%= f.date_select :occurred_at %><br>
  </div>

  <div>
    <%= f.label :details%>
    <%= f.text_area :details, cols: 40, rows: 7  %>
  </div>

  <div>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image_url %>
  </div>

  <div>
   <%= f.hidden_field :user_id, value: current_user.id%>
    <span id="latitude"> <%= f.hidden_field :latitude  %></span> 
    <span id="longitude"> <%= f.hidden_field :longitude  %></span> 
    
    <%= f.submit "Report", class: "remove btn btn-primary" %>
  </div>
<% end %>
